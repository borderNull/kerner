
body
  font-family 'Roboto',Arial,sans-serif

.header 
  height 50px
  border-bottom 1px solid rgba(232,232,232, .1)
  margin-bottom 60px

.header-content
  height 100%
  box horizontal middle space-between
  max-width 1200px
  margin 0 auto

.navigation
  box horizontal
  &__link
    color #fff
    font-size 14px
    text-decoration none
    box horizontal middle center
    margin-right 30px
    transition all .5s
    border-bottom 1px solid transparent
    &:hover
       border-bottom 1px solid rgba(255,255,255, .5)
    &:last-of-type
       margin-right 0

.authorization
  box horizontal

  &__link
    color #fff
    font-size 14px
    text-decoration none
    box horizontal middle
    &:first-of-type
      margin-right 25px

  .user
    width 14px
    height 17px
    margin-right 7px

.top-panel
    color #fff
    margin-bottom 230px

    &-content
      box horizontal space-between middle
      margin 0 auto
      max-width 1200px
.logo-section
    box horizontal middle
    color rgba(255,255,255, .7)
.logo
    width 180px
    height 53px
    margin-right 30px
.logo__text
    width 198px
    line-height 1.43

.search-section
   position relative

.search
    size 14px
    position absolute
    left 9%
    top 50%
    transform translate(-50%,-50%)

.search__input
     background-color transparent
     width 220px
     height 40px
     border 1px solid rgba(255,255,255, .2)
     border-radius 20px
     color #fff
     padding-left 40px
  
.phone-section
   box horizontal middle
.phone__number
     font-size 24px
     font-weight bold
     margin-right 20px
.phone__link
     background-color #579ac5
     width 150px
     height 30px
     box horizontal center middle
     border-radius 15px
     text-decoration none
     color #fff
     transition all .5s
     &:hover
        color #579ac5
        background #fff

.middle 
   color #fff
   margin-bottom 250px
   position relative
  
   &-content 
      margin 0 auto
      max-width 1200px
   
   &__title   
       font-size 40px
       line-height 60px
       max-width 690px
       margin-bottom 35px

   &__catalog
       font-size 18px
       color #fff
       text-decoration none
       border 1px solid rgba(255,255,255, .3)
       width 240px
       display block
       text-align center
       padding 13px 0
       box horizontal middle center
       order 1
       transition all .3s
       &:hover
           background #579ac5

.catalog__btn
   margin-right 20px
.catalog__item
   width 18px
   height 2px
   background #fff
   margin-bottom 4px
   border-radius 3px
   &:last-of-type
    margin 0

.scroll__link
   position absolute
   top 50%
   right 33px
   transform translateY(-50%)   

.scroll
   width 15px
   height 32px

.bottom
   color #fff
   
   &-content 
     max-width 1200px
     margin 0 auto
     box horizontal space-between

   &-item
     box horizontal
     &__title
        font-size 18px
        font-weight bold
        text-transform uppercase
        line-height 1.33
        margin-bottom 5px
        color #fff
     &__text
        color #ccc
        line-height 1.77
        font-size 14px

.boxes 
  width 43px
  height 49px
  margin-right 20px
.offer
   width 54px
   height 44px
   margin-right 15px
.delivery
   width 44px
   height 48px
   margin-right 20px
     